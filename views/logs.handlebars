<div class="container logs-page">
  <header class="container header">
    <div class="col-12">
      <nav class="d-flex justify-content-between">
        <a href="dashboard.html"><img src="./img/PetTrax_Logo-Nav.svg" alt="PetTrax logo" width="200px"></a>
      </nav>
    </div>
  </header>
  <!-- Main horizontal wrapper -->
  <div class="row justify-content-center">
    <!-- Login form wrapper -->
    <div class="col col-10 col-md-6">
      <a id="dashboard" href="#" class="breadcrumb"><< Back to Dashboard</a>
      <h2>Logs</h2><br>

        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                Select a Pet
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <li><a class="dropdown-item pet-choices" href="#">All</a></li>
                {{#each pets as |pet|}}
                <li><a class="dropdown-item pet-choices" href="#">{{ pet.name }}</a></li>
                {{/each}}
            </ul>
        </div>

        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                Select an Action
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <li><a class="dropdown-item event-choices" href="#">All</a></li>
                <li><a class="dropdown-item event-choices" href="#">Pee</a></li>
                <li><a class="dropdown-item event-choices" href="#">Poop</a></li>
                <li><a class="dropdown-item event-choices" href="#">Food</a></li>
            </ul>
        </div>

        <button id="submit" type="submit" value="submit">FILTER</button>

        {{#each events as |event|}}
        <p id="logs">{{ pet.name }}, {{ event.eventType }}, {{ event.time}} </p>
        {{/each}}
    </div>
  </div>

