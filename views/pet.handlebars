<body class="menu-page">

<div class="menu-page">

  <header class="header">
    <div class="col-12">
      <nav class="d-flex mx-2 justify-content-between align-items-center">
        <!-- Do we need this html tag? -->
        <a id="dashboard" href="#"><img src="./img/PetTrax_Logo-Nav.svg" alt="PetTrax logo" width="200px"></a>
        <a id="menu" href="#">Menu</a>
      </nav>
    </div>
  </header>

  <!-- Main horizontal wrapper -->
  <div class="row justify-content-center">
    <!-- Login form wrapper -->
    <div class="col col-10 col-md-6">
      <a id="dashboard" href="#" class="breadcrumb"><< Back to Dashboard</a>
      <h2>Pets</h2><br>
      <a id="addPet" href="#"><h4>Add New Pet</h4></a>
      {{#each pets as |pet|}}
      <img src="{{ pet.photo }}"/>
      <p id="user-name">Name: <br> {{ pet.name }}</p>
      <p id="user-address">Birthday: <br> {{ pet.birthday }}</p>
      <br>
      {{/each}}
      <button type="submit" value="submit">EDIT</button>
    </div>
  </div>

  </div>
 <script src="./js/pet.js"></script>







